<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app1">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cars"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"/>
        <activity
            android:name=".Supplier"
            android:label="Supplier&apos;s account"
            android:parentActivityName=".Signup" />
        <activity
            android:name=".Mechanic"
            android:label="Mechanic&apos;s account"
            android:parentActivityName=".Signup" />
        <activity
            android:name=".User"
            android:label="User&apos;s account"
            android:parentActivityName=".Signup" />
        <activity
            android:name=".Verification"
            android:label="Phone Verification"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Sms"
            android:label="Enter verification code"
            android:parentActivityName=".Verification" />
        <activity
            android:name=".Incorrectcode"
            android:label="Enter verification code"
            android:parentActivityName=".Verification" />
        <activity
            android:name=".Noelyn"></activity>

        <activity android:name=".Testmyroutes" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Signup"
            android:label="Chose Account"
            android:parentActivityName=".Sms" />
        <activity android:name=".MainActivity"/>


        <activity android:name=".navigationdrawer" />
    </application>

</manifest>